{
  "name": "root",
  "private": true,
  "scripts": {
    "audit": "lerna-audit",
    "lerna": "lerna",
    "format:check": "prettier --check $(git diff origin/master  --cached --name-only --diff-filter=AM)",
    "format:write": "prettier --write .",
    "format:check:package": "prettier --check \"packages/${PACKAGE}/**/*\"",
    "test": "jest"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@nestjs/testing": "^7.0.8",
    "@types/jest": "^26.0.15",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "jest-marbles": "^2.5.1",
    "lerna": "^3.20.2",
    "lerna-audit": "^1.2.0",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run format:check && npm run lerna -- run test && npm run lerna -- run build"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^7.0.8",
    "@nestjs/core": "^7.0.8",
    "@nestjs/platform-express": "^7.0.8",
    "reflect-metadata": "^0.1.13"
  }
}
